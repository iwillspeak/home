// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+;",
        "command": "undo"
    },
    {
        "key": "cmd+;",
        "command": "editor.action.commentLine",
        "when": "config.emacs-mcx.useMetaPrefixMacCmd"
    },
    {
        "key": "alt+;",
        "command": "editor.action.commentLine",
        "when": "!config.emacs-mcx.useMetaPrefixMacCmd"
    },
    {
        "key": "Ctrl+x Ctrl+=",
        "command": "workbench.action.zoomIn"
    },
    {
        "key": "Ctrl+x Ctrl+-",
        "command": "workbench.action.zoomOut"
    },
    {
        "key": "Ctrl+=",
        "command": "editor.action.smartSelect.expand"
    },
    {
        "key": "Ctrl+Shift+=",
        "command": "editor.action.smartSelect.shrink"
    },
    {
        "key": "cmd+s",
        "command": "magit.status",
        "when": "config.emacs-mcx.useMetaPrefixMacCmd"
    },
    {
        "key": "alt+s",
        "command": "magit.status",
        "when": "!config.emacs-mcx.useMetaPrefixMacCmd"
    },
    {
        "key": "cmd+.",
        "command": "editor.action.revealDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor && config.emacs-mcx.useMetaPrefixMacCmd"
    },
    {
        "key": "alt+.",
        "command": "editor.action.revealDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor && !config.emacs-mcx.useMetaPrefixMacCmd"
    },
    {
        "key": "cmd+,",
        "command": "editor.action.goToReferences",
        "when": "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor && config.emacs-mcx.useMetaPrefixMacCmd"
    },
    {
        "key": "alt+,",
        "command": "editor.action.goToReferences",
        "when": "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor && !config.emacs-mcx.useMetaPrefixMacCmd"
    },
    {
        "key": "cmd+shift+/",
        "command": "editor.action.showHover",
        "when": "editorTextFocus  && config.emacs-mcx.useMetaPrefixMacCmd"
    },
    {
        "key": "alt+shift+/",
        "command": "editor.action.showHover",
        "when": "editorTextFocus && !config.emacs-mcx.useMetaPrefixMacCmd"
    },
    {
        "key": "ctrl+shift+.",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+,",
        "command": "editor.action.addSelectionToPreviousFindMatch",
        "when": "editorTextFocus"
    },
    {
        "key": "Ctrl+t",
        "command": "editor.action.transpose"
    },
    {
        "key": "ctrl+shift+9",
        "command": "workbench.action.closeSidebar",
        "when": "sideBarVisible"
    },
    {
        "key": "ctrl+shift+9",
        "command": "emacs-mcx.executeCommands",
        "args": [
            "workbench.action.toggleSidebarVisibility",
            "workbench.action.focusSideBar"
        ],
        "when": "!sideBarVisible"
    },
    {
        "key": "ctrl+shift+0",
        "command": "workbench.action.toggleActivityBarVisibility"
    }
]